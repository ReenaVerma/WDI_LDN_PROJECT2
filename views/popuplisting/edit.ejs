<div class="container animated fadeIn">
  <%# sending POST/Create request to the page /cheeses %>
  <form method="POST" action="/popuplisting/<%= popup._id %>">

    <%# REQUIRED FIELD %>
    <%# THIS IS OUR _METHOD in BODY PARSER FUNCTION IN INDEX.JS %>
    <input type="hidden" name="_method" value="PUT">


    <div class="field">
      <label class="label">Pop-Up Name:</label>
      <div class="control">
        <input class="input" name="title" type="text" placeholder="Name" required minlength="2" value="<%= popup.title %>">
      </div>
    </div>
    <div class="field">
      <label class="label">Date:</label>
      <div class="control">
        <input class="input" name="date" type="date" placeholder="date" required value="<%= popup.date %>">
      </div>
    </div>
    <div class="field">
      <label class="label">Quirk factor...</label>
      <div class="control">
        <input class="input" name="twoWords" type="text" required minlength="2" value="<%= popup.twoWords %>">
      </div>
    </div>
    <div class="field">
      <label class="label">Event type</label>
      <div class="control">
        <div class="select">
          <select name="type">
            <option value="Food and drink">Food & Drink</option>
            <option value="Art">Art</option>
            <option value="Music">Music</option>
          </select>
        </div>
      </div>
    </div>


    <div class="field">
      <label class="label is-medium">Event type</label>
      <div class="control">
        <div class="select">
          <select name="cost">
            <option value="Free">Free - £ </option>
            <option value="Average">Average - ££ </option>
            <option value="Expensive">Expensive - £££ </option>
          </select>
        </div>
      </div>
    </div>


    <div class="field">
      <label class="label">Image upload</label>
      <div class="control">
        <%# <input class="input is-rounded" name="image" type="text" placeholder="Improve your listings page with an image!"  pattern="https?://.+"> %>
        <input class="input" id='imageUpload' name="image" placeholder="Improve your listings page with an image!" required type="hidden" />
        <img id="imgPreview" src="" height="200" width="200">
        <a class="button is-large has-text-centered is-primary" id="upload">
          <span class="icon is-medium"><i class="fab fa-github"></i></span>
          <span>Upload your photos</span>
        </a>
      </div>
    </div>



    <div class="field" id="locationField">
      <input type="hidden" name="lat">
      <input type="hidden" name="lng">
      <label class="label">Address:</label>
      <div class="control">
        <input id="autocomplete" name="loc" class="input" type="text" required value="<%= popup.loc %>">
      </div>
    </div>



    <div class="field">
      <label class="label">A short blurb about the event:</label>
      <div class="control">
        <textarea class="textarea" name="description" placeholder="(500 chars max)" maxlength="500" value=""><%= popup.description %></textarea>
      </div>
    </div>
    <div class="control">
      <button class="button is-primary">Submit</button>
    </div>
  </form>
</div>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC8C7HRroI6BaALKHa6EHMc_BDYLIB5kUA&libraries=places&callback=initAutocomplete" async defer></script>
