<section class="hero is-small homepage hero-head is-bold">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title has-text-white"><span class="opacity">new pop-up nearby?</span></h1>
      <h2 class="subtitle has-text-white"><span class="opacity">add it here!</span></h2>
    </div>
  </div>
</section>

<div class="container">
  <%# sending POST/Create request to the page /cheeses %>
  <form method="POST" action="/popuplisting" class="listing-form">
    <div class="field">
      <label class="label is-medium">Pop-Up Name:</label>
      <div class="control has-icons-left">
        <input class="input is-rounded is-medium" name="title" type="text" placeholder="Name" required minlength="2">
        <span class="icon is-small is-left">
          <i class="fas fa-user"></i>
        </span>
      </div>
    </div>
    <div class="control">
      <label class="label is-medium">Date:</label>
      <div class="control">
        <input class="input is-rounded is-medium" name="date" type="date" placeholder="date" required>
      </div>
    </div>
    <div class="field">
      <label class="label is-medium">Quirk factor:</label>
      <div class="control">
        <input class="input is-rounded is-medium" name="twoWords" type="text" placeholder="A short few words, to summmarise your listing.." required minlength="2">
      </div>
    </div>

    <div class="field">
      <label class="label is-medium">Event type</label>
      <div class="control">
        <div class="select">
          <select name="type">
            <option value="Food and drink">Food & Drink</option>
            <option value="Art">Art</option>
            <option value="Music">Music</option>
          </select>
        </div>
      </div>
    </div>

    <div class="field">
      <label class="label is-medium">Event type</label>
      <div class="control">
        <div class="select">
          <select name="cost">
            <option value="Free">Free - £ </option>
            <option value="Average">Average - ££ </option>
            <option value="Expensive">Expensive - £££ </option>
          </select>
        </div>
      </div>
    </div>

    <div class="field">
      <label class="label is-medium">Image upload</label>
      <div class="control">
        <%# <input class="input is-rounded" name="image" type="text" placeholder="Improve your listings page with an image!"  pattern="https?://.+"> %>
        <input class="input" id='imageUpload' name="image" placeholder="Improve your listings page with an image!" required type="hidden" />
        <img id="imgPreview" src="" height="200" width="200">
        <a class="button is-large has-text-centered is-primary" id="upload">
          <span class="icon is-medium"><i class="fab fa-github"></i></span>
          <span>Upload your photos</span>
        </a>
      </div>
    </div>

    <div class="field" id="locationField">
      <input type="hidden" name="lat" />
      <input type="hidden" name="lng" />
      <label class="label is-medium">Address:</label>
      <div class="control">
        <input id="autocomplete" name="loc" class="input is-rounded" type="text" placeholder="" required>
      </div>
    </div>



    <div class="field">
      <label class="label is-medium">A short blurb about the event:</label>
      <div class="control">
        <textarea class="textarea" name="description" placeholder="(500 chars max)" maxlength="500"></textarea>
      </div>
    </div>
    <div class="control">
      <button class="button is-primary">Submit</button>
    </div>
  </form>
</div>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC8C7HRroI6BaALKHa6EHMc_BDYLIB5kUA&libraries=places&callback=initAutocomplete" async defer></script>
