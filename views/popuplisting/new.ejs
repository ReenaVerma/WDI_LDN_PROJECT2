<section class="hero is-small homepage hero-head is-bold">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title has-text-white">new pop-up nearby?</h1>
      <h2 class="subtitle has-text-white">add it here!</h2>
    </div>
  </div>
</section>

<div class="container">
  <%# sending POST/Create request to the page /cheeses %>
  <form method="POST" action="/popuplisting">
    <div class="field">
      <label class="label">Pop-Up Name:</label>
      <div class="control has-icons-left">
        <input class="input is-rounded" name="title" type="text" placeholder="Name" required minlength="2">
        <span class="icon is-small is-left">
          <i class="fas fa-user"></i>
        </span>
      </div>
    </div>
    <div class="control">
      <label class="label">Date:</label>
      <div class="control">
        <input class="input is-rounded" name="date" type="date" placeholder="date" required minlength="2">
      </div>
    </div>
    <div class="field">
      <label class="label">Quirk factor:</label>
      <div class="control">
        <input class="input is-rounded" name="twoWords" type="text" placeholder="Two random words to describe your event..." required minlength="2">
      </div>
    </div>
    <div class="field">
      <label class="label">Event type</label>
      <div class="control">
        <%# <input class="input" name="where" type="text" placeholder="EG... Peckham" required minlength="2"> %>
        <div class="select">
          <select name="type">
            <option value="Food and drink">Food and drink</option>
            <option value="Art">Art</option>
            <option value="Music">Music</option>
          </select>
        </div>
      </div>
    </div>
    <div class="field">
      <label class="label">Image upload</label>
      <div class="control">
        <input class="input is-rounded" name="image" type="text" placeholder="Improve your listings page with an image!"  pattern="https?://.+">
      </div>
    </div>

    <div class="field" id="locationField">
      <input type="hidden" name="lat" />
      <input type="hidden" name="lng" />
      <label class="label">Address:</label>
      <div class="control">
        <input id="autocomplete" name="loc" class="input is-rounded" type="text" placeholder="" required>
      </div>
    </div>

    <%# <div id="locationField" class="field">
      <input type="hidden" name="lat" />
      <input type="hidden" name="lng" />
      <label class="label" name="address" type="text">What's the address?:</label>
      <input id="autocomplete" placeholder="Enter your address" type="text" />
    </div> %>

    <div class="field">
      <label class="label">A short blurb about the event:</label>
      <div class="control">
        <textarea class="textarea" name="description" placeholder="(380 chars max)" maxlength="380"></textarea>
      </div>
    </div>
    <div class="control">
      <button class="button is-primary">Submit</button>
    </div>
  </form>
</div>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC8C7HRroI6BaALKHa6EHMc_BDYLIB5kUA&libraries=places&callback=initAutocomplete" async defer></script>
